<h2>Payment Queue</h2>

<% if (qr_link) { %>
  <p>‚úÖ Your turn! Please scan and pay:</p>
  <img src="<%= qr_link %>" alt="QR Code">
  <p>UPI: <%= qr_upi %></p>
<% } else { %>
  <p>üö¶ Someone else is paying ‚Çπ<%= amount %>. Please wait for your turn.</p>
  <p>‚è±Ô∏è This page will refresh automatically after <span id="timer">05:00</span></p>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const paymentId = "<%= id %>";
    socket.emit("watch-payment", paymentId);

    socket.on("payment-status", (data) => {
      if (data.paymentId == paymentId && data.status === "success") {
        location.reload(); // Try to get QR if promoted
      }
    });

    // Countdown Timer
    let totalSeconds = 5 * 60;
    const timerDisplay = document.getElementById("timer");

    const interval = setInterval(() => {
      totalSeconds--;
      const minutes = String(Math.floor(totalSeconds / 60)).padStart(2, '0');
      const seconds = String(totalSeconds % 60).padStart(2, '0');
      timerDisplay.textContent = `${minutes}:${seconds}`;

      if (totalSeconds <= 0) {
        clearInterval(interval);
        location.reload();
      }
    }, 1000);
  </script>
<% } %>
