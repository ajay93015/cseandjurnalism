<% } else { %>
  <p>ğŸš¦ Someone else is paying â‚¹<%= amount %>. Please wait for your turn.</p>
  <p>â±ï¸ This page will refresh automatically after <span id="timer">05:00</span></p>

  <script>
    let seconds = 300;
    const timerEl = document.getElementById("timer");

    function updateTimer() {
      let min = Math.floor(seconds / 60);
      let sec = seconds % 60;
      timerEl.textContent = `${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
      if (seconds > 0) {
        seconds--;
        setTimeout(updateTimer, 1000);
      } else {
        location.reload(); // âŸ³ Refresh after 5 minutes
      }
    }

    updateTimer();
  </script>
