<%-include("header")-%>
<div style="padding: 2rem; width: 80%; margin: 3% auto; background-color: #1c1c1c; border-radius: 10px; border: 2px solid #333; box-shadow: 0 0 12px rgba(0,0,0,0.5); font-family: 'Segoe UI', sans-serif; color: #eee;">

    <h2 style="color: #00ffe7; border-bottom: 2px solid #00ffe7; padding-bottom: 0.5rem; margin-bottom: 1.5rem;">⚙️ Fee Collection</h2>

    <form action="" method="get">
        <label style="font-weight: bold; font-size: 1rem;">🎓 Preference</label>
        <div style="margin: 10px 0 20px 0;">
            <select id="class" name="class" style="padding: 10px; width: 100%; background-color: #2a2a2a; color: #00ffe7; border: 1px solid #444; border-radius: 5px;">
                <option value="" disabled selected>Choose Your Preference</option>
                <option value="BCA">BCA</option>
                <option value="DCA">DCA</option>
                <option value="MBA">MBA</option>
            </select>
        </div>

        <div style="margin-bottom: 20px;">
            <label for="Uniq-Id" style="font-weight: bold; font-size: 1rem;">🆔 Uniq-Id</label>
            <input id="Uniq-Id" name="Uniq-Id" style="padding: 10px; width: 100%; background-color: #2a2a2a; color: #00ffe7; border: 1px solid #444; border-radius: 5px; margin-top: 5px;">
        </div>

        <div style="text-align: right;">
            <button type="submit" class="btn">
                🚀 Fetch
            </button>
        </div>
    </form>
</div>

<%-include("footer")-%>